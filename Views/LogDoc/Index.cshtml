@model IEnumerable<AEDFirst.Models.LogDocViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Message = "Logs";
    ViewBag.Title = "Logs";
    ViewBag.Description = "Liste";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">

            </div>
            <div class="card-body">
                <table id="users-table" class="table nowrap dt-responsive align-middle table-hover table-bordered" style="width:100%">
                    <thead class="table-warning">
                        <tr>
                            <th scope="col" style="width: 50px;">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="checkAll" value="option">
                                </div>
                            </th>
                            <th class="sort" data-sort="datelog">
                                @Html.DisplayNameFor(model => model.DateLog)
                            </th>
                            <th class="sort" data-sort="format">
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th class="sort" data-sort="dateupload">
                                @Html.DisplayNameFor(model => model.LogType)
                            </th>
                            <th class="sort" data-sort="taille">
                                @Html.DisplayNameFor(model => model.ConcernedDoc)
                            </th>
                            <th class="sort" data-sort="dateupload">
                                @Html.DisplayNameFor(model => model.ConcernedUser)
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td scope="row">
                                    <div class="form-check">
                                        <input class="form-check-input checkOne" type="checkbox" name="chk_child" value="option1">
                                    </div>
                                </td>
                                <td class="titre">
                                    @Html.DisplayFor(modelItem => item.DateLog)
                                </td>
                                <td class="format">
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td class="taille">
                                    @Html.DisplayFor(modelItem => item.LogType)
                                </td>
                                <td class="dateupload">
                                    @Html.DisplayFor(modelItem => item.ConcernedDoc.Titre)
                                </td>
                                <td class="uploader">
                                    @Html.DisplayFor(modelItem => item.ConcernedUser.Login)
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    <!--datatable js-->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
}

@section Stylesheets {
    <!--datatable css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <!--datatable responsive css-->
    <link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
}
